<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/user_bg"
              android:orientation="vertical"
              android:weightSum="1"
              tools:context="com.sudalv.subway.fragment.CardFragment">


    <FrameLayout
        android:id="@+id/card_layout1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_weight="0.12">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/card_card1_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="1234567890"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:bootstrapBrand="success"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/card_card1_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="解绑"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/card_div"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/div"
        android:orientation="vertical"></LinearLayout>

    <FrameLayout
        android:id="@+id/card_layout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="0.12">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/card_card2_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="1234567890"
            android:textColor="#ffffff"
            android:textSize="25dp"
            app:bootstrapBrand="success"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/card_card2_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="解绑"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.70">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/card_add"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="40dp"
            android:text="增加"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:roundedCorners="true"/>

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/card_confirm"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="40dp"
            android:text="确认"
            app:bootstrapBrand="warning"
            app:bootstrapSize="lg"
            app:roundedCorners="true"/>
    </FrameLayout>

</LinearLayout>
