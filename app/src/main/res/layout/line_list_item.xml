<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
            android:background="@drawable/bg_line_item"
    android:columnCount="3"
            android:orientation="horizontal"
            android:rowCount="2">

    <TextView
        android:id="@+id/line_item_line"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="龙阳路->世纪大道->世纪大道->世纪大道->世纪大道->世纪大道->世纪大道"
        android:textColor="@drawable/text_color_primary_invertible"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/line_item_status"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="畅通"
        android:textColor="#98bf55"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/line_item_time"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="约1小时 | 10站 | 步行526米"
        android:textColor="#c0c5c6"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/line_item_coin"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingRight="25dp"
        android:text="Q100"
        android:textColor="#17ff16"
        android:textStyle="bold"/>
</GridLayout>