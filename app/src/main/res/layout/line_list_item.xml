<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:rowCount="2"
    android:columnCount="3"
    android:background="@drawable/bg_line_item">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_item_line"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/text_color_primary_invertible"
        android:gravity="center_vertical"
        android:text="龙阳路->世纪大道"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_item_status"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#75ff6d"
        android:gravity="center_vertical"
        android:text="畅通"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_item_time"
        android:layout_column="1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textColor="#c0c5c6"
        android:gravity="center_vertical"
        android:text="约1小时 | 10站 | 步行526米"
        android:paddingLeft="10dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/line_item_points"
        android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#17ff16"
        android:gravity="center_vertical"
        android:text="Q100"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"
        android:paddingRight="25dp"
        android:layout_marginBottom="5dp" />
</GridLayout>